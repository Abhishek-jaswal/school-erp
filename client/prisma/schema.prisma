generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id             String @id
  firstName      String
  lastName       String
  email          String
  contact        String
  address        String
  aadharNumber   String
  alternateNumber String
  education      String
  subject        String
  password       String
}

model Student {
  id             String @id
  firstName      String
  lastName       String
  email          String
  contact        String
  address        String
  aadharNumber   String
  alternateNumber String
  education      String
  subject        String
  password       String
}

model Subject {
  id   Int    @id @default(autoincrement())
  name String
}

model Notification {
  id         Int      @id @default(autoincrement())
  content    String
  created_at DateTime @default(now())
}

model Issue {
  id         Int      @id @default(autoincrement())
  by_user_id String
  role       String
  message    String
  created_at DateTime @default(now())
}

model Exam {
  id          Int      @id @default(autoincrement())
  teacher_id  String
  subject     String
  date        DateTime
  duration    Int
  total_marks Int
  questions   Json
}

model Syllabus {
  id       Int      @id @default(autoincrement())
  teacher_id String
  subject  String
  syllabus String
}

model TodaysTopic {
  id         Int      @id @default(autoincrement())
  teacher_id String
  subject    String
  topic      String
  date       DateTime
}
